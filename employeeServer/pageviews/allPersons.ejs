<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Persons</title>
    <link rel="stylesheet" href="/styles/styles.css" type="text/css">
</head>
<body>
    <main>
        <h2>All persons</h2>
        <table>
            <thead>
                <tr>
                    <th>PersonId</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach(person => { %>
                    <tr>
                        <td><%= person.personId %></td>
                        <td><%= person.firstname %> <%= person.lastname %></td>
                        <td><%= person.department %></td>
                        <td><%= person.salary %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/"><button>Menu</button></a>
    </main>
</body>
</html>